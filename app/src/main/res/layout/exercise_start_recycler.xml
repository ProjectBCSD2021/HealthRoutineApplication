<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/layout"
    android:background="@drawable/exercise_starting_list">
        <TextView
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="운동이름"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/set"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/set"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/exerciseTimeText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/routine_exercise_time"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/exerciseTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="60초"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toEndOf="@+id/exerciseTimeText"/>
        <TextView
            android:id="@+id/restTimeText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/routine_rest_time"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toEndOf="@+id/exerciseTime"/>
        <TextView
            android:id="@+id/restTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="30초"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toEndOf="@+id/restTimeText"/>
        <TextView
            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/routine_weight"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toEndOf="@+id/restTime"/>
        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="10kg"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise"
            app:layout_constraintStart_toEndOf="@+id/weightText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>