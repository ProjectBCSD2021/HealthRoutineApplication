<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthroutineapplication">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".ExerciseRoutineApp"
        android:allowBackup="true"
        android:icon="@mipmap/fitness_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fitness_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthRoutineApplication">
        <activity
            android:name=".activities.MemoEditActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".StepCounterService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activities.StepCounterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.WorkOutStartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.WorkOutListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ExerciseStartingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ExerciseRoutineActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.MainListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>